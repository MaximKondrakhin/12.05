<Window x:Class="exam4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam4"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Background="#DAD7CD" Grid.Row="1"></Grid>
        <Grid Background="#3A5A40" Grid.ColumnSpan="2"></Grid>
        

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"></Frame>
        <Grid Grid.Row="2" Background="#3A5A40"  Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource BottomText}" Grid.Column ="0" Margin="30 0 0 0" HorizontalAlignment="Left">Кондрахин М.Д. ИСП-420п</TextBlock>
            <TextBlock Style="{StaticResource BottomText}" Grid.Column="1" Margin="0 0 30 0" HorizontalAlignment="Right">13.05.2024</TextBlock>
        </Grid>

    </Grid>
</Window>
